<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="skillberto.sonata_page_menu.builder.main" class="Skillberto\SonataPageMenuBundle\MenuBuilder\MainMenuBuilder" >
            <argument>SkillbertoSonataPageMenuBundle:Menu</argument>
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="doctrine" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="sonata.page.router" />
            <argument type="service" id="sonata.page.site.selector" />
        </service>

        <service id="skillberto.sonata_page_menu.main" class="Knp\Menu\MenuItem" >
            <factory service="skillberto.sonata_page_menu.builder.main" method="getMenu" />
            <tag name="knp_menu.menu" alias="main" />
        </service>

    </services>
</container>